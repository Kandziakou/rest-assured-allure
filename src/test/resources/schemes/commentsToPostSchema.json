{
  "title": "comments to single post",
  "type": "array",
  "uniqueItems": true,
  "items": {
    "title": "/posts/id/comments",
    "type":"object",
    "properties": {
      "postId": {
        "description": "post's ID",
        "type": "number"
      },
      "id": {
        "description": "comment's ID",
        "type": "number"
      },
      "name": {
        "description": "commentator's name",
        "type": "string"
      },
      "email": {
        "description": "commentator's email",
        "type": "string",
        "pattern": "^(\\w+\\.)?\\w+@(\\w+\\.)+\\w+$"
      },
      "body": {
        "description": "comment",
        "type": "string"
      }
    }
  }
}